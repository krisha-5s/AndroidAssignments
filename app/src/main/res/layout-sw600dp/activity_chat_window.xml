<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/chatListView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_above="@id/send_btn"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:id="@+id/msgEditText"
        android:layout_width="198dp"
        android:layout_height="73dp"
        android:layout_alignEnd="@+id/chatListView"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="102dp"
        android:layout_marginRight="-3dp"
        android:layout_toLeftOf="@id/send_btn"
        android:hint="@string/type_message" />

    <Button
        android:id="@+id/send_btn"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/msgEditText"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@+id/frameLayout"
        android:text="@string/send" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="640dp"
        android:layout_height="1683dp"
        android:layout_alignBottom="@+id/chatListView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="-50dp"
        android:layout_toRightOf="@id/chatListView"
        android:background="@color/purple" />

</RelativeLayout>
